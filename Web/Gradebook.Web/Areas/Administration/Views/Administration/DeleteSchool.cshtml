@using Gradebook.Data.Models
@model Gradebook.Web.Areas.Administration.ViewModels.InputModels.SchoolModifyInputModel
@{
    ViewData["Title"] = "Delete School";
}

<h3 class="delete-page-heading">Delete School</h3>
<form asp-action="DeleteSchool" method="post">
    <div>
        <label asp-for="School.Name"></label>
        <input asp-for="School.Name" class="form-control" readonly/>
        <span asp-validation-for="School.Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="School.Address"></label>
        <input asp-for="School.Address" class="form-control" readonly/>
        <span asp-validation-for="School.Address" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="School.Type"></label>
        <select asp-for="School.Type"
                class="form-control"
                asp-items="Html.GetEnumSelectList<SchoolType>()" readonly>
            <option>Select school type...</option>
        </select>
        <span asp-validation-for="School.Type" class="text-danger"></span>
    </div>

    <hr/>
    <div class="center-group">
        <input type="submit" name="onSubmitAction" class="btn btn-light" value="Cancel"/>
        <input type="submit" name="onSubmitAction" class="btn btn-primary delete-record-btn" value="Delete School" onclick="return confirm(`Are you sure you want to delete that school?`)"/>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}