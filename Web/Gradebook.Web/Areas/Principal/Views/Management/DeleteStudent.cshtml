@model Gradebook.Web.Areas.Principal.ViewModels.InputModels.StudentModifyInputModel
@{
    ViewData["Title"] = "Delete student";
}

<h3 class="page-heading">Delete student</h3>
<form asp-action="DeleteStudent" method="post">
    <div>
        <label asp-for="Student.FirstName">Student's first name</label>
        <input asp-for="Student.FirstName" class="form-control" readonly/>
        <span asp-validation-for="Student.FirstName" class="text-danger"></span>
    </div>
    
    <div>
        <label asp-for="Student.LastName">Student's last name</label>
        <input asp-for="Student.LastName" class="form-control" readonly/>
        <span asp-validation-for="Student.LastName" class="text-danger"></span>
    </div>
    
    <div>
        <label asp-for="Student.BirthDate"></label>
        <input asp-for="Student.BirthDate" class="form-control" type="date" readonly/>
        <span asp-validation-for="Student.BirthDate" class="text-danger"></span>
    </div>
    
    <div>
        <label asp-for="Student.PersonalIdentificationNumber"></label>
        <input asp-for="Student.PersonalIdentificationNumber" class="form-control" readonly/>
        <span asp-validation-for="Student.PersonalIdentificationNumber" class="text-danger"></span>
    </div>

    <hr/>
    <div class="center-group">
        <input type="submit" name="onSubmitAction" class="btn btn-light" value="Cancel"/>
        <input type="submit" name="onSubmitAction" class="btn btn-primary delete-record-btn" value="Delete Student" onclick="return confirm(`Are you sure you want to delete that student?`)"/>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}