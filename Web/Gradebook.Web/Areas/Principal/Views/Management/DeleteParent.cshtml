@model Gradebook.Web.Areas.Principal.ViewModels.InputModels.ParentModifyInputModel
@{
    ViewData["Title"] = "Delete parent";
}

<h3 class="page-heading">Delete parent</h3>
<form asp-action="DeleteParent" method="post">
    <div>
            <label asp-for="Parent.FirstName">Parent's first name</label>
            <input asp-for="Parent.FirstName" class="form-control" readonly/>
            <span asp-validation-for="Parent.FirstName" class="text-danger"></span>
        </div>
        
        <div>
            <label asp-for="Parent.LastName">Parent's last name</label>
            <input asp-for="Parent.LastName" class="form-control" readonly/>
            <span asp-validation-for="Parent.LastName" class="text-danger"></span>
        </div>
        
        <div>
            <label asp-for="Parent.PhoneNumber"></label>
            <input asp-for="Parent.PhoneNumber" class="form-control" readonly/>
            <span asp-validation-for="Parent.PhoneNumber" class="text-danger"></span>
        </div>

    <hr/>
    <div class="center-group">
        <input type="submit" name="onSubmitAction" class="btn btn-light" value="Cancel"/>
        <input type="submit" name="onSubmitAction" class="btn btn-primary delete-record-btn" value="Delete Parent" onclick="return confirm(`Are you sure you want to delete that parent?`)"/>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}