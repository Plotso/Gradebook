@model Gradebook.Web.Areas.Principal.ViewModels.InputModels.TeacherModifyInputModel
@{
    ViewData["Title"] = "Delete teacher";
}

<h3 class="page-heading">Delete teacher</h3>
<form asp-action="DeleteTeacher" method="post">
    <div>
        <label asp-for="Teacher.FirstName">Teacher's first name</label>
        <input asp-for="Teacher.FirstName" class="form-control" readonly/>
        <span asp-validation-for="Teacher.FirstName" class="text-danger"></span>
    </div>
    
    <div>
        <label asp-for="Teacher.LastName">Teacher's last name</label>
        <input asp-for="Teacher.LastName" class="form-control" readonly/>
        <span asp-validation-for="Teacher.LastName" class="text-danger"></span>
    </div>
    
    <h6 class="text-danger">Teacher WON'T be deleted if he is currently leading a class. You will be redirected to this page until he is free of class duty.</h6>

    <hr/>
    <div class="center-group">
        <input type="submit" name="onSubmitAction" class="btn btn-light" value="Cancel"/>
        <input type="submit" name="onSubmitAction" class="btn btn-primary delete-record-btn" value="Delete Teacher" onclick="return confirm(`Are you sure you want to delete that teacher?`)"/>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}